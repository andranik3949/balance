<Window x:Class="Balance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Balance"
        mc:Ignorable="d"
        Title="MainWindow" Height="356" Width="525">
   <Border Padding="10">
      <StackPanel Height="300">
         <Grid Height="250">
            <Grid.ColumnDefinitions>
               <ColumnDefinition Width="1.5*"/>
               <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="DataScreen" Grid.Column="0"/>
            <StackPanel Grid.Column="1">
               <Calendar x:Name="CalendarScreen" FirstDayOfWeek="Monday"/>
               <Button MouseLeftButtonDown="Button_MouseLeftButtonDown" Click="Button_Click" Width="179" Height="25" Content="Update"/>
            </StackPanel>
         </Grid>
         <TextBlock x:Name="StatusBar" Text="Varung"/>
      </StackPanel>
   </Border>
</Window>
